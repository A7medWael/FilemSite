@model IEnumerable<Movie>
@{
    ViewData["Title"] = "Movies";
}
<h2><i class="bi bi-camera-reels-fill"></i>Movies</h2>
<hr />
<a class="btn btn-primary" asp-action="Creat"> <i class="bi bi-plus-circle"></i> Add Movie</a>
<div class="mt-4" >
    @if(!Model.Any())
    {
        <div class="alert alert-warning" role="alert">

            <i class="bi bi-exclamation-octagon"></i> Movies Not Found
        </div>
    }
    else
    {
        <div class="row">
            @foreach(var movi in Model)
            {
                <div class="col-12">
                <div class="card mb-3" >
                    <div class="row g-0">
                        <div class="col-md-2 Poster" style="background-image : url(data:image\/*;base64,@(Convert.ToBase64String(movi.Poster)))">
                           
                        </div>
                        <div class="col-md-8">
                            <div class="card-body d-flex flex-column justify-content-between h-100">
                                <div>
                                        <h5 class="card-title">@movi.Title (@movi.Year)</h5>
                                        <p class="card-text text-justify">@(movi.StoryLine.Length>500 ? $"{movi.StoryLine.Substring(0,300)}...":movi.StoryLine)</p>
                                </div>
                                <div class="d-flex justify-content-between m-0 mt-3">
                                    <p class="card-text"><small class="text-body-secondary">
                                        <i class="bi bi-star-fill text-warning"></i> @movi.Rate.ToString("0.0")</small></p>
                                        <div>
                                            <a asp-action="Details" asp-route-Id="@movi.Id" class="btn btn-outline-secondary"><i class="bi bi-camera-reels"></i> Details</a>
                                            <a asp-action="Edit" asp-route-Id="@movi.Id" class="btn btn-outline-primary"><i class="bi bi-pencil"></i> Edit</a>
                                            <a asp-action="Delete" asp-route-Id="@movi.Id" class="btn btn-outline-danger"><i class="bi bi-trash"></i> Delete</a>
                                        </div>
                                 </div>
                            </div>
                        </div>
                    </div>
                    </div>
                </div>
            }
        </div>
    }

</div>